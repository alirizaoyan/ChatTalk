<html>
<head>
    <title>Chat & Talk</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/utilLogin.css">
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/mainLogin.css">

</head>
<body>
<div class="limiter">
        <div class="modal">
            <div class="modal__inner">
                <div class="wrap-login100">
                    <form action="/" method="post" id="setNick">
                        <span class="login100-form-title p-b-34 p-t-27">
                           Chat & Talk
                        </span>
                        <% if (message.length > 0) { %>
                        <div id ="loginalert" class="login100-form-btn">
                            <%= message %></div></br>
                        <% } %>
                        <div class="form-group" >
                            <div class="wrap-input100 validate-input" data-validate="Enter password">
                                <input class="input100 form-control" type="text" id="email" name="email" placeholder="Kullanıcı adı">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Enter password">
                                <input class="input100 form-control" id="password" type="password" name="password" placeholder="Parola">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                            </div>
                        </div>
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" id="giris" type="submit">
                                Giriş
                            </button>
                            <div><a class="txt2" href="/signup">
                                    Kayıt Ol
                                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
<script src="/public/js/jquery-3.2.1.min.js"></script>
<script src="/public/js/popper.js"></script>
<script src="/public/js/bootstrap.min.js"></script>
<script src="/public/js/select2.min.js"></script>
<script src="/node_modules/jquery/dist/jquery.min.js"></script>
<script src="/public/js/countdowntime.js"></script>
<script src="/public/js/main.js"></script>
<script>
    setTimeout(function() {
        $('#loginalert').fadeOut('slow');
    }, 3000);
</script>
<script>
    $(document).ready(function(){
        var email,pass;
        $("#giris").click(function(){
            email=$("#email").val();
            pass=$("#password").val();
            $.post("https://localhost:3000/anasayfa",{email:email,pass:pass},function(data){
                alert("Girşi yapıldı");
                if(data==='done')
                {
                    alert("data : " + data);
                    window.location.href="/anasayfa";
                }
                else
                {
                    alert("Başarısız oldu");
                }
            });
        });
    });
</script>
</body>
</html>